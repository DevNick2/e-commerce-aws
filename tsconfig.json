{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [ // este é o caminho real onde será armazenado os layers
        "lambda/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/eventsLayer": [ // este é o caminho real onde será armazenado os layers
        "lambda/products/layers/eventsLayer/nodejs/eventsRepository"
      ],
      "/opt/nodejs/ordersLayer": [ // este é o caminho real onde será armazenado os layers
        "lambda/orders/layers/ordersLayer/nodejs/ordersRepository"
      ],
      "/opt/nodejs/ordersApiLayer": [ // este é o caminho real onde será armazenado os layers
        "lambda/orders/layers/ordersApiLayer/nodejs/ordersApi"
      ],
      "/opt/nodejs/ordersEventsLayer": [ // este é o caminho real onde será armazenado os layers
        "lambda/orders/layers/ordersEventsLayer/nodejs/orderEvent"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
